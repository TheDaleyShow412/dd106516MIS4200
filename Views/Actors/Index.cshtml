@model IEnumerable<dd106516MIS4200.Models.Actor>

@{
    ViewBag.Title = "Actor List";
}

<h2>List of Actors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.actorAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.oscarWinner)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.actorAge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.oscarWinner)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.actorID }) |
            @Html.ActionLink("Details", "Details", new { id=item.actorID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.actorID })
        </td>
    </tr>
}

</table>
